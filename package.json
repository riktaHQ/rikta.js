{
  "name": "@riktajs/monorepo",
  "version": "0.4.1",
  "description": "A fast and modern TypeScript backend framework with zero-config autowiring, powered by Fastify",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "benchmarks"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspace=example",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspace=@riktajs/core",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:core": "npm run test --workspace=@riktajs/core",
    "test:swagger": "npm run test --workspace=@riktajs/swagger",
    "test:cli": "npm run test --workspace=@riktajs/cli",
    "example": "npm run dev --workspace=example",
    "bench": "npm run bench --workspace=benchmarks",
    "bench:startup": "npm run bench:startup --workspace=benchmarks",
    "bench:requests": "npm run bench:requests --workspace=benchmarks",
    "bench:autocannon": "npm run bench:autocannon --workspace=benchmarks",
    "sync:version": "node scripts/sync-core-version.js",
    "version:core": "npm version --workspace=@riktajs/core",
    "version:cli": "npm version --workspace=@riktajs/cli",
    "cli": "npm run --workspace=@riktajs/cli",
    "cli:build": "npm run build --workspace=@riktajs/cli",
    "cli:dev": "npm run dev --workspace=@riktajs/cli"
  },
  "keywords": [
    "framework",
    "backend",
    "typescript",
    "fastify",
    "decorators",
    "dependency-injection",
    "nestjs-like"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
