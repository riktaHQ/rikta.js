{
  "name": "@riktajs/queue",
  "version": "0.11.5",
  "description": "BullMQ-based job queue integration for Rikta Framework with lifecycle management and event-driven processing",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsup",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rikta",
    "bullmq",
    "queue",
    "redis",
    "job-queue",
    "background-jobs",
    "typescript",
    "decorators",
    "dependency-injection",
    "workers",
    "scheduler"
  ],
  "author": "riktar",
  "license": "MIT",
  "dependencies": {
    "ioredis": "^5.4.2"
  },
  "peerDependencies": {
    "@riktajs/core": ">=0.11.5",
    "bullmq": ">=5.0.0",
    "reflect-metadata": ">=0.2.0"
  },
  "peerDependenciesMeta": {
    "bullmq": {
      "optional": false
    },
    "@bull-board/api": {
      "optional": true
    },
    "@bull-board/fastify": {
      "optional": true
    }
  },
  "devDependencies": {
    "@riktajs/core": "*",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.9",
    "bullmq": "^5.34.8",
    "ioredis": "^5.4.2",
    "ioredis-mock": "^8.9.0",
    "reflect-metadata": "^0.2.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
