{
  "name": "@riktajs/passport",
  "version": "0.11.4",
  "description": "PassportJS authentication integration for Rikta Framework with session management and strategy decorators",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsup",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rikta",
    "passport",
    "authentication",
    "session",
    "fastify",
    "typescript",
    "decorators",
    "dependency-injection",
    "local-strategy",
    "oauth"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fastify-plugin": "^5.0.1"
  },
  "peerDependencies": {
    "@riktajs/core": ">=0.11.4",
    "fastify": ">=5.0.0",
    "@fastify/passport": ">=3.0.0",
    "@fastify/secure-session": ">=8.0.0",
    "passport": ">=0.7.0",
    "passport-local": ">=1.0.0",
    "reflect-metadata": ">=0.2.0"
  },
  "peerDependenciesMeta": {
    "passport-local": {
      "optional": true
    }
  },
  "devDependencies": {
    "@riktajs/core": "*",
    "@types/node": "^22.10.2",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@vitest/coverage-v8": "^2.1.9",
    "fastify": "^5.2.1",
    "@fastify/passport": "^3.0.1",
    "@fastify/secure-session": "^8.1.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/riktajs/rikta.git",
    "directory": "packages/passport"
  },
  "bugs": {
    "url": "https://github.com/riktajs/rikta/issues"
  },
  "homepage": "https://github.com/riktajs/rikta/tree/main/packages/passport#readme"
}
