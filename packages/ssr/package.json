{
  "name": "@riktajs/ssr",
  "version": "0.11.4",
  "description": "Server-Side Rendering (SSR) support for Rikta framework with React, Vue, and other frontend frameworks",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rikta",
    "ssr",
    "server-side-rendering",
    "react",
    "vue",
    "vite",
    "fastify",
    "fullstack",
    "typescript"
  ],
  "author": "riktar",
  "license": "MIT",
  "dependencies": {
    "@fastify/middie": "^9.0.2",
    "@fastify/static": "^8.3.0",
    "fastify-plugin": "^5.0.1"
  },
  "peerDependencies": {
    "@riktajs/core": ">=0.11.4",
    "fastify": ">=5.0.0",
    "vite": ">=5.0.0 || >=6.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": false
    }
  },
  "devDependencies": {
    "@riktajs/core": "*",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.9",
    "fastify": "^5.3.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.11",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
