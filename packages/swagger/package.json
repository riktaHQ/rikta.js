{
  "name": "@riktajs/swagger",
  "version": "0.11.5",
  "description": "Automatic OpenAPI/Swagger documentation generation for Rikta Framework",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsup",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rikta",
    "swagger",
    "openapi",
    "documentation",
    "fastify",
    "typescript",
    "decorators",
    "api-docs"
  ],
  "author": "riktar",
  "license": "MIT",
  "peerDependencies": {
    "@riktajs/core": ">=0.11.5",
    "fastify": ">=5.0.0",
    "reflect-metadata": ">=0.2.0",
    "zod": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "dependencies": {
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "fastify-plugin": "^5.0.1"
  },
  "devDependencies": {
    "@riktajs/core": "*",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.9",
    "fastify": "^5.3.2",
    "reflect-metadata": "^0.2.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "zod": "^4.3.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
