{
  "name": "example-ssr-react",
  "version": "0.1.0",
  "description": "Rikta SSR example with React - A fullstack React application",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run build:server && npm run build:client && npm run build:ssr",
    "build:client": "vite build --outDir dist/client",
    "build:ssr": "vite build --outDir dist/server --ssr src/entry-server.tsx",
    "build:server": "vite build --outDir dist --ssr src/server.ts",
    "start": "NODE_ENV=production node dist/server.js",
    "preview": "npm run build && npm run start"
  },
  "keywords": [
    "rikta",
    "ssr",
    "react",
    "fullstack",
    "vite"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^8.3.0",
    "@riktajs/core": "*",
    "@riktajs/react": "*",
    "@riktajs/ssr": "*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.11"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
